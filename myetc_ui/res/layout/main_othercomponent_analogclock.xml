<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/tool_layout_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
   <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义的数字时钟控件" />

            <com.myetc_ui.view.MyDigitalClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="15dp"
                android:layout_y="30dp"
                android:shadowColor="@android:color/white"
                android:shadowRadius="2.0"
                android:textColor="@color/cyan"
                android:textSize="24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统的模拟时钟控件" />
            <!-- 模拟时钟控件 -->

            <AnalogClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
            <!-- 数字时钟控件 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统的数字时钟控件" />

            <DigitalClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义模拟时钟组件主要是带秒。感觉活了起来！。图片在源\android-sdk-windows\platforms\android-8\data\res\drawable-hdpi中拿的" />

            <com.myetc_ui.view.MyAnalogClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>